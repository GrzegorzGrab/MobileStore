@model IEnumerable<MobileStore.Domain.Entities.ProductType>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Typ Produktu
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.ProductTypeName, "Edit", new { item.ProductTypeID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ProductTypeID }) |
            </td>
            <td>    
                @using (Html.BeginForm("Delete", "AdminProductType"))
                {
                    @Html.Hidden("ProductTypeID",item.ProductTypeID)
                    <input type="submit" value="Usuń" />
                }
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
