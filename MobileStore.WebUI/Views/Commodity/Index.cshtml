@model IEnumerable<MobileStore.Domain.Entities.Commodity>

@{
   // Layout = null;
}


    <h4>@TempData["title"]</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductModelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller.GetFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.ProductModel.Producer.ProducerName)
            </th>
            <th>
                @Html.ActionLink("Data zakupu", "Index", new { sortOrder=ViewBag.DateSortParam})
            </th>
            <th>
                @Html.ActionLink("Kwota zakupu", "Index", new { sortOrder=ViewBag.PurchaseSortParam })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SimLocker.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.IsAvailable)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductModelID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller.GetFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.ProductModel.Producer.ProducerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SimLocker.Name)
            </td>
            <td>
                @if (item.IsAvailable)
                {
                    <span class="label label-success">Dostępny</span>
                }
                else
                {
                    <span class="label label-danger">Niedostępny</span>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.CommodityID }) |
                @Html.ActionLink("Details", "Details", new { item.CommodityID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.CommodityID })
            </td>
        </tr>
    }
    
    </table>

