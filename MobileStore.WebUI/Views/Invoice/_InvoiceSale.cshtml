@model IEnumerable<MobileStore.Domain.Entities.Sale>
@using MobileStore.Domain.Entities

<hr />
<h5>Pozycje na fakturze</h5>


@foreach (var item in Model)
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    @Html.DisplayNameFor(model => model.CommodityID):
                    <a data-toggle="collapse" href="#@Html.DisplayFor(modelItem=>item.CommodityID)">

                        @Html.DisplayFor(modelItem => item.CommodityID)
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
                </h4>
            </div>
            <div id="@Html.DisplayFor(modelItem=>item.CommodityID)" class="panel-collapse collapse">
                <div class="panel-body">
                    @{Html.RenderAction("_CommodityDetails", "Commodity", new { commodityId = item.CommodityID });}
                </div>
            </div>
        </div>
    </div>
                        }