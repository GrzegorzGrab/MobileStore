@model MobileStore.Domain.Entities.Producer
@{
    //Layout = null;
}

<h1>Edycja @Model.ProducerName</h1>

@using (Html.BeginForm("Edit", "AdminProducer"))
{
    <div class="input-group">
        @Html.EditorFor(p => p.ProducerName, new { @class = "form-control" })
    </div>
    <div class="input-group">
        @Html.EditorFor(p => p.ProducerDescription, new { @class = "form-control" })
    </div>
    <input type="submit" value="Zapisz" class="btn btn-default" />
    @Html.ActionLink("Anuluj","Index", null, new { @class = "btn btn-default" })
}