@model IEnumerable<MobileStore.Domain.Entities.Producer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @if (TempData["message"] != null)
    {
        <h3>@TempData["message"]</h3>
    }
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Opis</th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.ProducerID
            </td>
            <td>
                @Html.ActionLink(item.ProducerName,"Edit", new { item.ProducerID})
            </td>
            <td> 
                @Html.ActionLink("Details", "Details", new { id=item.ProducerID }) |
            </td>
            <td>
                @using (Html.BeginForm("Delete", "AdminProducer"))
                {
                    @Html.Hidden("ProducerID", item.ProducerID)
                    <input type="submit" value="Usuń" />
                }
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
